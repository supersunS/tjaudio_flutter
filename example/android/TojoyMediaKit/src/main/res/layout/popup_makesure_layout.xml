<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounder_popup_bg">

    <RelativeLayout
        android:id="@+id/rlv_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlv_title_layout">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="@dimen/dp_16"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center"
            android:textColor="@color/color_ff333333"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlv_contenthint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/rlv_title_layout">

        <TextView
            android:id="@+id/tv_content_meeting"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_596271"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content_hint"
            android:layout_below="@+id/tv_content_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_596271"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_below="@+id/rlv_content_layout">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlv_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/button_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textColor="@color/color_61000000"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>
            <View
                android:id="@+id/bottom_vertical_divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dddddd" />

            <RelativeLayout
                android:id="@+id/rlv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/button_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认"
                    android:textColor="@color/color_ff3072f6"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>