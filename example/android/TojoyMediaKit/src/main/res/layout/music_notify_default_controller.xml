<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_notice_def_notify_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/music_notice_def_cover_main"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/music_notice_def_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_2"
            android:background="@drawable/default_audio_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_notice_def_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/music_notice_def_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="--"
            android:textColor="#61000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/music_notice_def_btn_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_music_mini_last_noimal" />

        <ImageView
            android:id="@+id/music_notice_def_btn_pause"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/music_notice_def_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/audio_icon_next" />

        <ImageView
            android:id="@+id/music_notice_def_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/audio_icon_close" />
    </LinearLayout>
</LinearLayout>